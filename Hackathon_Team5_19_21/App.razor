
<CascadingAuthenticationState>
    <Router AppAssembly="@typeof(Program).Assembly">
        <Found Context="routeData">
            @if (routeData.PageType.Name == "Login"  || routeData.PageType.Name == "ReimpostaPassword" || routeData.PageType.Name == "RecuperaPassword")
            {
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(LoginLayout)" />
            }
            else
            {
                <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(CustomLayout)" />
            }
        </Found>
        <NotFound>
            <LayoutView Layout="@typeof(CustomLayout)">
                <!-- 404 Error Text -->
                <div class="text-center">
                    <div class="error mx-auto" data-text="404">404</div>
                    <p class="lead text-gray-800 mb-5">Page Not Found</p>
                </div>
            </LayoutView>
        </NotFound>
    </Router>
</CascadingAuthenticationState>
