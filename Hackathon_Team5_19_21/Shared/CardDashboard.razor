<div class="card border-left-@Classe shadow h-50 py-2 h-auto mb-4">
    <div class="card-body">
        <div class="d-flex flex-row justify-content-between align-items-center">
            <div class="flex-grow-1">
                <div class="text-xs font-weight-bold text-@Classe text-uppercase mb-1">@Titolo</div>
                <div class="h5 mb-0 font-weight-bold text-gray-800">@Testo</div>
            </div>
            <i class="fas @Icona fa-2x text-gray-300"></i>
        </div>
    </div>
</div>


@code {
    [Parameter]
    public Color Colore { get; set; }
    [Parameter]
    public string Icona { get; set; }
    [Parameter]
    public string Titolo { get; set; }
    [Parameter]
    public string Testo { get; set; }

    string Classe;

    protected override void OnInitialized()
    {
        switch (Colore)
        {
            case Color.Danger:
                Classe = "danger";
                break;
            case Color.Dark:
                Classe = "dark";
                break;
            case Color.Info:
                Classe = "info";
                break;
            case Color.Light:
                Classe = "light";
                break;
            case Color.Primary:
                Classe = "primary";
                break;
            case Color.Secondary:
                Classe = "secondary";
                break;
            case Color.Success:
                Classe = "success";
                break;
            case Color.Warning:
                Classe = "warning";
                break;
        }
    }
}
